{
  "name": "backend-coding-test",
  "version": "1.0.1",
  "description": "A coding assessment for Xendit backend interviews",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "lint": "./node_modules/.bin/eslint ./",
    "load:test": "./node_modules/.bin/artillery run hello.yml",
    "test": "mocha tests",
    "coverage": "nyc --reporter=text npm run test",
    "start": "node index.js"
  },
  "pre-push": [
    "lint",
    "coverage"
  ],
  "nyc": {
    "include": "src",
    "exclude": "services"
  },
  "keywords": [
    "Xendit"
  ],
  "author": "Bo",
  "license": "ISC",
  "dependencies": {
    "artillery": "^1.6.0",
    "body-parser": "^1.19.0",
    "express": "^4.16.4",
    "sqlite3": "^4.0.6",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "eslint": "^7.2.0",
    "mocha": "^6.1.4",
    "nyc": "^15.1.0",
    "pre-push": "^0.1.1",
    "supertest": "^4.0.2"
  }
}
